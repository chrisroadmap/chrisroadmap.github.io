	journal = {Environmental Research Letters},
	author = {Ganti, Gaurav and Gidden, Matthew J and Smith, Christopher J and Fyson, Claire and Nauels, Alexander and Riahi, Keywan and Schleußner, Carl-Friedrich},
	month = feb,
