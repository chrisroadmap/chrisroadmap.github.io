	author = {Smith, Chris and Cummins, Donald P. and Fredriksen, Hege-Beate and Nicholls, Zebedee and Meinshausen, Malte and Allen, Myles and Jenkins, Stuart and Leach, Nicholas and Mathison, Camilla and Partanen, Antti-Ilari},
